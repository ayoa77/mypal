/* @group Misc. global styles */

html{
  overflow: none;
  min-width: 320px;
  -webkit-font-smoothing: antialiased;
  word-break: break-word;
}

body {
  font-family: 'Roboto Slab', '冬青黑体', 'Hiragino Sans GB', '微軟正黑體', 'Microsoft JhengHei', '黑体', 'SimHei', '华文黑体', 'STHeiti', sans-serif;
  color: #303030;
  font-weight: 400;
  background-image: url("/backgrounds/gt-bg.jpg");
  background-size: 100%;
  position: relative;
  height: 100%;
}
.bblue{
  color:#3ae9eb;
  font-family: 'Roboto Slab'
}
.content-wrapper{
  position: relative;
  top: 50px;
  overflow: auto;
  /*@media (min-width: $screen-sm-min) {
    top: 0;
  }*/
  left: 0px;
  right: 0px;
  height: 100%;
  #sidebar{
    // position: fixed;
    // top: 56px;
    // bottom: 0;
    // left: -300px;
    display: block;
    // width: 280px;
    z-index: 998;
    transition: left 0.4s ease-in-out;

    @media (min-width: $screen-sm-min) {
      left: 0;
    }
    &.lower-sidebar {
      top: 450px;
      position: absolute;
    }
    .main-menu{
      position: absolute;
      top: 0;
      left:0;
      right:0;
      bottom:0;
      background: rgba(255,255,255,0.95);
      padding: 20px;
      overflow-y: auto;
      z-index: 999;
      visibility: hidden;
      -webkit-overflow-scrolling: touch;
      @media (min-width: $screen-sm-min) {
        visibility: visible;
        top: 0;
      }
    }
    #sidebar-background{
      position: fixed;
      z-index: 997;
      top:0;
      left:0;
      right:0;
      bottom:0;
      background: rgba(0,0,0,0.4);
      visibility: hidden;
      opacity: 0;
      transition: visibility 0s linear .4s, opacity .4s ease-in-out;
    }
      &.open{
        left: 0;
        #sidebar-background {
          visibility: visible;
          opacity: 1;
          transition-delay:0s;
          @media (min-width: $screen-sm-min) {
            visibility: hidden;
            opacity: 0;
          }
        }
      }

  }
  #main-content{
    //position: absolute;
    // top: 0;
    // left: 0;
    // right: 0;
    // bottom: 0;
    overflow-x: hidden;
    //overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    padding: 0;
    background-color: white;

    &.app {
      padding: 0 0 0 280px;
      max-width: 1200px;

      @media (max-width: $screen-sm-min) {
        padding: 0;
      }
    }

    @media (max-width: $screen-sm-min) {
      padding: 0;
    }

    .pages{
      min-height: 720px;
      padding: 10px;
      @media (min-width: $screen-sm-min) {
        padding: 40px;
      }
    }
    .item-main-wrapper, .filter-bar, .list-group{
      // max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    &.splash{
      overflow-x: hidden;
      overflow-y: auto;
      padding: 0;
      .item-main-wrapper{
        border: none;
      }
    }
    &.sidebar-margin{
      @media (min-width: $screen-sm-min) {
        left: 280px;
      }
      @media (min-width: $screen-lg-min) {
        //padding-right: 300px;
        padding-left: 280px;
        /*.conversation{
          right: 300px;
        }*/
      }
    }
    &.double-margin{
      @media (min-width: $screen-lg-min) {
        left: 280px;
        padding-right: 300px;
        /*.conversation{
          right: 300px;
        }*/
      }
    }
  }
}

.static-content {
  padding: 0 0 0 280px;

  @media (max-width: $screen-sm-min) {
    padding: 0;
  }

  .item-main-wrapper {
    padding: 20px 30px;
  }
}

