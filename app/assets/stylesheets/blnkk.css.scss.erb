/* @group Blinks */

.filter-bar {
  &.border{
    margin: 0 0 -1px 0;
    border: 1px solid #d8d8d8;
    border-left-width: 0;
    border-right-width: 0;
  }
  &.bottom-border{
    margin: 0 0 -1px 0;
    border-bottom: 1px solid #d8d8d8;
  }
}

fa.fa-fw.fa-circle{
  display: inline-block;
}

.item-main-wrapper {

  float: none;
  width: 100%;
  padding: 0;
  @media (min-width: $screen-sm-min){
    padding: 10px 0;
    float: right;
    width: 80%;
  }

  transition: margin .26s ease;

  margin: 0 0 10px 0;

  &.expandable .item-body:hover {
    cursor: pointer;
    background: #f8f8f8;
  }
