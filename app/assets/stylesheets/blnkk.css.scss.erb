/* @end */

/* @group generic elements */

.btn{
  font-size: 14px;
  font-style: normal;
  font-family: $biggerfont;
  line-height: 12px;
  font-weight: 700;
  line-height: 20px;
  text-transform: uppercase;
  border-radius: 4px;
  span:not(:first-child){
    margin-left: 2px;
  }
  span:not(:last-child){
    margin-right: 2px;
  }
}
.btn-xs{
  padding: 0 4px;
  font-size: 10px;
}
.btn-sm{
  padding: 2px 10px;
  font-size: 12px;
}
.btn-lg{
  padding: 9px 18px;
  font-size: 16px;
}
.btn-huge{
  padding: 15px 40px;
  font-size: 18px;
}
.btn-block{
  padding-left: 0;
  padding-right: 0;
}

.btn-default{
  color: $dark_gray;
  border-color: rgba(0,0,0,.1);
  background: white;
  i.fa{
    color: $medium_gray;
  }
  &:hover, &:focus{
    border-color: rgba(0,0,0,.15);
    background: darken(white, 5%);
  }
  &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
    color: $medium_gray;
    i.fa{
      color: $light_gray;
    }
    border-color: rgba(0,0,0,.05);
    background: white;
  }
  &.active{
    color: $dark_gray;
    box-shadow: none;
    background: darken(white, 10%);
    border-color: rgba(0,0,0,.2);
    &:hover, &:focus{
      color: $dark_gray;
      background: darken(white, 5%);
    }
  }
}

.btn-primary{
  color: white;
  border-color: $primary_color;
  background: $primary_color;
  &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
    color: white;
    border-color: darken($primary_color, 5%);
    background: darken($primary_color, 5%);
  }
  &.persona{
    border-color: #E86E2C;
    background: #E86E2C;
    &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
      border-color: darken(#E86E2C, 5%);
      background: darken(#E86E2C, 5%);
    }
  }
  &.facebook{
    border-color: #405d95;
    background: #405d95;
    &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
      border-color: darken(#405d95, 5%);
      background: darken(#405d95, 5%);
    }
  }
  &.linkedin{
    border-color: #0084c3;
    background: #0084c3;
    &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
      border-color: darken(#0084c3, 5%);
      background: darken(#0084c3, 5%);
    }
  }
  &.google{
    border-color: #dd4b39;
    background: #dd4b39;
    &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
      border-color: darken(#dd4b39, 5%);
      background: darken(#dd4b39, 5%);
    }
  }
}

.btn-danger{
  color: white;
  border-color: $red;
  background: $red;
  &:hover, &:focus, &[disabled], &[disabled]:hover, &.disabled, &.disabled:hover{
    color: white;
    border-color: darken($red, 5%);
    background: darken($red, 5%);
  }
}

.btn-link{
  color: $medium_gray;
  &:hover, &:focus{
    color: darken($medium_gray, 10%);
    text-decoration: none;
  }
  &.btn-no-text{
    i.fa, span{
      vertical-align: middle;
      line-height: 32px;
    }
    i.fa{
      font-size: 25px;
    }
    padding: 0 6px;

    color: $light_gray;
    &:hover, &:focus{
      color: darken($light_gray, 10%);
    }
    &.btn-sm{
      i.fa, span{
        line-height: 22px;
      }
      i.fa{
        font-size: 15px;
      }
    }
    &:first-child{
      margin-left:  -6px;
    }
  }

}

.dropdown-menu{
  li{
    a{
      color: $dark_gray;
      i.fa{
        color: $medium_gray;
      }
    }
  }
}
.with-overflow{
  overflow: visible!important;
}
/* @end */

/* @group headers */

.logo-wrapper {
  background-color:#70C6CD;
  padding: 10px 20px;
  @media (min-width: $screen-sm-min) {
    padding: 10px 40px;
  }
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  .media-left{
    a{
      display: inline-block;
      padding: 0;
      border: none;
      color: white;
      font-size: 24px;
      line-height: 24px;
      vertical-align: middle;
      font-weight: bold;
      font-family: $biggerfont;
      &.logo{
        &:hover, &:focus{
          text-decoration: none;
        }
        span{
          vertical-align: middle;

          &:after {
            content: "BETA";
            font-size: 7.5px;
            opacity: .5;
            vertical-align: text-top;
            font-weight: 100;
          }
        }
      }
      &.hamburger{
        font-size: 26px;
        margin-right: 10px;
        position: relative;
        .badge{
          background: $red;
          position: absolute;
          top: -3px;
          right: -10px;
        }
      }
    }
    img{
      height: 60px;
      // padding: 2px;
      border-radius: 0;
    }
  }
  .media-right{
    .btn, .btn-group{
      display:inline-block;
    }

    .btn{
      margin-left: 5px;
    }

    .btn-link{
      padding: 0;
      position: relative;
      border: none;
      color: white;
      i.fa{
        font-size: 24px;
      }
      &.btn-first{
        margin-left: 0;
      }
    }
    .btn-primary{
      padding: 4px 12px;
    }
  }
}

