  height: 50px;
  background-color: $primary_color;
  border-radius: 50%;
  z-index: 900;
  box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28);
  @media (min-width: $screen-sm-min) {
    right: 40px;
    bottom: 30px;
    width: 60px;
    height: 60px;
  }
  label{
    position: fixed;
    background: $medium_gray;
    color: white;
    right: 90px;
    bottom: 27px;
    padding: 4px 8px;
    font-size: 12px;
    visibility: hidden;
    opacity: 0;
    transition: visibility 0s linear, opacity .4s ease;
    @media (min-width: $screen-sm-min) {
      right: 116px;
      bottom: 40px;
    }
  }
  &::before, &::after {
    color: white;
    font: normal normal normal 14px/1 FontAwesome;
    font-size: 20px;
    position: absolute;
    padding-top: 2px;
    top: 15px;
    left: 17px;
    @media (min-width: $screen-sm-min) {
      top: 20px;
      left: 22px;
    }
  }
  &::before {
    content: "\f067";
    opacity: 1;
    transition: transform .2s ease-in-out, opacity .2s ease;
  }
  &::after {
    content: "\f040";
    opacity: 0;
    transform: rotate(180deg);
    transition: transform .2s ease-in-out, opacity .2s ease;
  }
  &:hover{
    label{
      visibility: visible;
      opacity: 1;
    }
  }
  &:hover::before {
    transform: rotate(180deg);
    opacity: 0;
  }
  &:hover::after{
    transform: rotate(360deg);
    opacity: 1;
  }
}

