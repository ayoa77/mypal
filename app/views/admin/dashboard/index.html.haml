.page-header
  %h1 Admin dashboard

.row
  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Users
      .panel-body
        .row
          .col-xs-6 Total
          .col-xs-6.text-right
            %strong= @user_count
        .row
          .col-xs-6 Active (d/w/m)
          .col-xs-6.text-right
            %strong 
              #{@daily_active_user_count} / #{@weekly_active_user_count} / #{@monthly_active_user_count}
        .row
          .col-xs-6 Online
          .col-xs-6.text-right
            %strong= @online_user_count
        %p
        = link_to 'View all users', admin_users_path, class: 'btn btn-primary btn-lg btn-block'

  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Posts & updates
      .panel-body
        .row
          .col-xs-6 Total
          .col-xs-6.text-right
            %strong= @request_count
        .row
          .col-xs-6 Recent
          .col-xs-6.text-right
            %strong= @recent_request_count
        %p
        = link_to 'View all requests', admin_requests_path, class: 'btn btn-primary btn-lg btn-block'


  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Conversations
      .panel-body
        .row
          .col-xs-6 Total
          .col-xs-6.text-right
            %strong= @conversation_count
        .row
          .col-xs-6 Recent
          .col-xs-6.text-right
            %strong= @recent_conversation_count
        %p
        = link_to 'View all conversations', admin_conversations_path, class: 'btn btn-primary btn-lg btn-block'

%h2 New daily stats
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Date
        %th.text-right Users
        %th.text-right Posts
        %th.text-right Updates
        %th.text-right Comments
        %th.text-right Messages
    %tbody
      - @new_daily_stats.each do |s|
        %tr
          %td= s[0]
          %td.text-right= s[1]
          %td.text-right= s[2]
          %td.text-right= s[3]
          %td.text-right= s[4]
          %td.text-right= s[5]

%h2 Daily stats
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th Date
        %th.text-center{colspan: 2} Users
        %th.text-center{colspan: 2} Posts & updates
        %th.text-center{colspan: 2} Conversations
      %tr
        %th
        %th.text-right Total
        %th.text-right Active (d/w/m)
        %th.text-right Total
        %th.text-right Recent
        %th.text-right Total
        %th.text-right Recent
    %tbody
      - @daily_stats.each do |s|
        %tr
          %td= s.date
          %td.text-right= s.users
          %td.text-right #{s.daily_active_users} / #{s.weekly_active_users} / #{s.monthly_active_users}
          %td.text-right= s.requests
          %td.text-right= s.recent_requests
          %td.text-right= s.conversations
          %td.text-right= s.recent_conversations